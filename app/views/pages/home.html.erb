<%# Message d'accueil user %>

<div class="container text-center mb-5">
  <div class="pt-4">
    <% if user_signed_in? %>
      <div class="d-flex justify-content-center">
        <% @newTitle = "Hi #{current_user.pseudo}" %>
        <%= render "layouts/header" %>
      </div>
      <p class="text-center">All these <%=Product.count%> gears are waiting for you</p>
    <% else %>
      <h1 class="text-center header">Hi there!</h1>
      <p class="text-center">All these <%=Product.count%> gears are waiting for you</p>
    <% end %>
  </div>
</div>

