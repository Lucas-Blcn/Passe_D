<div class="container text-center mb-5 pt-5">

   <div class="d-flex justify-content-center">
      <% @newTitle = "My Posts" %>
      <%= render "layouts/header" %>
    </div>

  <%# Cards home page %>

  <div class="row row-cols-1 row-cols-lg-2 g-4">
    <% @products.each do |product| %>
    <%= link_to product_path(product), class:"text-decoration-none" do %>
      <div class="shadow-sm rounded-4 p-3 bg-light mb-3 ">

        <div>
        <% if product.photos.attached? %>
               <%= cl_image_tag product.photos[0].key, crop: :fill, class: "w-100 h-100", style: "object-fit: cover;" %>
            <% else %>
              <img src="https://images.unsplash.com/photo-1551698618-1dfe5d97d256?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8c2tpfGVufDB8fDB8fHww"alt="" style="width: 100%; height: 100%; object-fit: cover;">
            <% end %>
          <div class=" d-flex justify-content-between" style="border-radius: 50px; padding: 8px; color:#3e3434;font-size: 20px;font-weight: bold;">
            <div><%= product.title %></div>
              <div><%= product.price %>â‚¬/j</div>
            </div>
          </div>
        </div>
         <%# <%= product.description%>
      </div>
      <% end %>
    <% end %>
  </div>
<%# </div> %>
