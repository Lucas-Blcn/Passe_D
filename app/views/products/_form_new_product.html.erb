<div class="container">

 <%= simple_form_for(@product) do |f| %>
  <%= f.input :title, placeholder: "Ex: Bike to eat the road, Jack!" %>
  <%= f.input :description, placeholder: 'Tell us more about your product' %>
  <%= f.input :price %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

</div>
